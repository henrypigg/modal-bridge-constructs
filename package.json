{
  "name": "modal-bridge-constructs",
  "version": "0.1.1",
  "description": "AWS CDK constructs for integrating Modal serverless GPU/CPU functions with AWS services",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "license": "Apache-2.0",
  "author": "Henry Pigg",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrypigg/modal-bridge-constructs.git"
  },
  "homepage": "https://github.com/henrypigg/modal-bridge-constructs#readme",
  "bugs": {
    "url": "https://github.com/henrypigg/modal-bridge-constructs/issues"
  },
  "keywords": [
    "aws",
    "cdk",
    "modal",
    "serverless",
    "gpu",
    "lambda",
    "constructs",
    "infrastructure",
    "iac"
  ],
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "dist",
    "lib/handlers",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run bundle-lambda",
    "bundle-lambda": "npx esbuild lib/modal-function-handler/index.ts --bundle --platform=node --target=node22 --outfile=dist/lib/modal-function-handler/index.js --external:@aws-sdk/*",
    "watch": "tsc -w",
    "test": "jest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.950.0",
    "modal": "^0.6.0",
    "esbuild": "^0.27.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "~5.6.3"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0"
  }
}
